{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "gcc",
            "args": [
                "*.c",
                "-o",
                "${workspaceFolder}\\Build\\game.exe",
                "-g",  
                "-Werror",
                "-Wno-unused-value",
                "-Wno-unused-but-set-variable",
                "-I../lib/SDL2/include/SDL2",
                "-I../lib/SDL_Image/include/SDL2",
                "-I../lib/SDL_TTF/include/SDL2",
                "-L../lib/SDL2/lib",
                "-L../lib/SDL_Image/lib",
                "-L../lib/SDL_TTF/lib",
                "-lSDL2",
                "-lSDL2main",
                "-lSDL2_Image",
                "-lSDL2_ttf"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}